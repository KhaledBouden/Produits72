{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ClientName</th>
                <th>ClientAdresse</th>
                <th>ClientPhone</th>
                <th>Products</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.clientName }}</td>
                <td>{{ order.clientAdresse }}</td>
                <td>{{ order.clientPhone }}</td>
                <td>
                    {% for product in order.products %}
                        <strong>{{ product.titre }}</strong> (X {{ order.productQuantities[product.id] }})
                        <br>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
